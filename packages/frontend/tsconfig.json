{
  "compilerOptions": {
    "jsx": "react-jsx", // or "react" if using React <17
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "extends": "../../tsconfig.json",
  "include": [
    "./**/*.ts",
    "./**/*.tsx"
  ]
}